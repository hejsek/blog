{block #content}

<h1 n:block="title">Přihlášení</h1>

{form loginForm}
<div class="sign-in-form">
	{control $form errors}

	<div class="pair">
		{label username /}
		<div class="input">{input username}</div>
	</div>
	<div class="pair">
		{label password /}
		<div class="input">{input password}</div>
	</div>
	<div class="pair">
		<div class="input">{input submit}</div>
	</div>
</div>
{/form}