		<link rel="stylesheet" href="{$basePath}/_/css/style.css">
		<link rel="stylesheet" href="{$basePath}/bootstrap/css/bootstrap.min.css">
		<link rel="stylesheet" href="{$basePath}/jquery-ui/jquery-ui-1.9.2.custom.min.css">
		<link rel="stylesheet" href="{$basePath}/_/css/default.css">
		<link rel="stylesheet" href="{$basePath}/_/css/backend.css">

		<script src="{$basePath}/_/js/modernizr-1.7.min.js"></script>
	</head>

	<body>
			{form loginForm}
				<div class="container">
					<div class="center clearfix">
						<h1 class="login">Login</h1>
						<form class="clearfix span4 login">
							{input username } <br>
							{input password } <br>
							{input submit, class => 'btn btn-primary btn-large span4 button'}
						</form>
					<div class="alert alert-{$flash->type}" n:foreach="$flashes as $flash">
						{$flash->message}
					</div>
				</div>
			{/form}
				<div class="footer">
					<div class="container">
						<p>Powered by <a href="http://nette.org">Nette Framework</a> and <a href="http://twitter.github.com/bootstrap/">Twitter Bootstrap</a>.</p>
