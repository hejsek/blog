					</div>
				</div>
				<script src="{$basePath}/_/js/jquery-1.8.3.min.js"></script>
				<script src="{$basePath}/bootstrap/js/bootstrap.min.js"></script>
				<script src="{$basePath}/jquery-ui/jquery-ui-1.9.2.custom.min.js"></script>
				<script src="{$basePath}/_/js/functions.js"></script>
	</body>
