{contentType application/xml}
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">
	<channel>
		<title>Blog</title>
		<link>{link //Article:default}</link>
		<description>Blog description</description>

		<item n:foreach="$articles as $article">
			<title>{$article->name}</title>
			<link>{link //Article:detail, $article->slug}</link>
			<description>{$article->prologue}</description>
		</item>
	</channel>
</rss>